
{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "projection": {
    "type": "mercator",
    "center": [133.7751, -28.2744],
    "scale": {"expr": "zoom_scale"}
  },
  "params": [
    {
      "name": "zoom_scale",
      "value": 850,
      "bind": {
        "input": "range",
        "min": 500,
        "max": 3000,
        "step": 100,
        "name": "Zoom Level: "
      }
    },
    {
      "name": "SizeFilter",
      "value": "All",
      "bind": {
        "input": "select",
        "options": ["All", "unknown", "small", "medium", "large", "very_large", "catastrophic"],
        "name": "Select Landslide Size: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://kzhang583.github.io/FIT3171V2KZ/STE_2021_AUST_GDA2020.json",  
        "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA2020"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",  
        "stroke": "white",    
        "strokeWidth": 1.0
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/kzhang583/FIT3171V2KZ/main/Global_Landslide_Catalog_Export.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {"filter": "datum.country_code == 'AU'"},
        {
          "filter": "SizeFilter == 'All' || datum.landslide_size == SizeFilter"
        }
      ],
      "mark": {"type": "point", "filled": true},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "shape": {
          "field": "landslide_size",
          "type": "nominal",
          "scale": {
            "domain": ["unknown", "small", "medium", "large", "very_large", "catastrophic"],
            "range": ["square", "circle", "circle", "circle", "circle", "circle"]
          },
          "legend": {
            "title": "Landslide Size",
            "symbolType": "shape"
          }
        },
        "size": {
          "field": "landslide_size",
          "type": "nominal",
          "scale": {
            "domain": ["unknown", "small", "medium", "large", "very_large", "catastrophic"],
            "range": [150, 400, 800, 1200, 1600, 2000]  // Larger size differences for better visibility
          },
          "title": "Landslide Size"
        },
        "color": {
          "field": "admin_division_name",
          "type": "nominal",
          "scale": {
            "domain": [
              "New South Wales",
              "Queensland",
              "South Australia",
              "Tasmania",
              "Victoria",
              "Western Australia"
            ],
            "range": [
              "#f58418",  
              "#81a0c2",  
              "#eec93a",  
              "#72b7b2",  
              "#b279a1",  
              "#fd9ea6"   
            ]
          },
          "legend": {"title": "State"}
        },
        "tooltip": [
          {"field": "event_title", "type": "nominal", "title": "Event"},
          {"field": "event_date", "type": "temporal", "title": "Date"},
          {"field": "landslide_category", "type": "nominal", "title": "Landslide Category"},
          {"field": "landslide_trigger", "type": "nominal", "title": "Landslide Trigger"},
          {"field": "landslide_size", "type": "nominal", "title": "Landslide Size"},
          {"field": "landslide_setting", "type": "nominal", "title": "Landslide Setting"},
          {"field": "fatality_count", "type": "quantitative", "title": "Fatality Count"},
          {"field": "injury_count", "type": "quantitative", "title": "Injury Count"},
          {"field": "admin_division_name", "type": "nominal", "title": "State"}
        ]
      }
    },
    {
      "data": {
        "url": "https://kzhang583.github.io/FIT3171V2KZ/ne_110m_graticules_10.json",  
        "format": {"type": "topojson", "feature": "ne_110m_graticules_10"}
      },
      "mark": {"type": "geoshape", "stroke": "gray", "strokeWidth": 0.5}  
    }
  ]
}
